{% extends './base.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}

    <div id="manif-titre">
        <h1 id="titre">{{ Manifs.titre }}</h1>
        <h2>{{ Manifs.auteur }}</h2>
    </div>
    <div class="manif-container">
        <img src=" {{ asset("Image/#{ Manifs.affiche }") }}" id="affiche">
        <div class="desc-container">
            <h2>Description</h2>
            <br>
            <p class="description">{{ Manifs.description }}</p>
        </div>
        <div class="details-container">
            <h4>{{ Manifs.genre }}</h4>
            <p>{{ Manifs.lieu }}</p>
            <p>{{ Manifs.date }} - {{ Manifs.heure }}</p>
            <div><p id="prix">{{ Manifs.prix }}</p>€ - x<input type="number" value="1" min="1" max="99" id="qte"></div>
            <input type="hidden" id="id" value="{{ Manifs.id }}">
            <button id="ajout">Réserver</button>
        </div>

    </div>
    <script type="text/javascript" src="{{ asset('scriptpagearticles.js') }}"></script>
{% endblock %}
