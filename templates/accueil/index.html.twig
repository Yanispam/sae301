{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="img-accueil">
    <h1>Le site qui rassemble tous vos <br>évênements sur Troyes !</h1>
</div>

<div class="event-accueil-container">
    {% for Manifs in 0..5 %}
        <div class="event-accueil">
            <img src="{{ asset("Image/#{Manifs.affiche}") }}" alt="">
            <h4>{{ Manifs.titre }}</h4>
            <p>{{ Manifs.heure }}</p>
            <p>{{ Manifs.date }}</p>
            <p>{{ Manifs.prix }} €</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
